<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomEditText" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:background">@drawable/view_background</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomText" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/colorHint</item>

        <item name="android:gravity">center</item>
    </style>

    <style name="CustomButton" parent="android:style/TextAppearance">
        <item name="android:textColor">@color/colorBox</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_button</item>

    </style>

    <style name="RadioGroup" parent="android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorDark</item>
        <item name="android:windowBackground">@drawable/view_background</item>
    </style>

</resources>
