<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Saldo atual:"
                android:fontFamily="cursive"
                android:textSize="25dp"
                style="@style/CustomText"/>


        <View android:layout_width="200dp"
              android:layout_height="1dp"
              android:layout_gravity="center"
              android:background="@color/colorText"/>

        <TextView
                android:id="@+id/edit_Saldo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                style="@style/CustomEditText"
                android:textSize="30sp"
                android:fontFamily="cursive"/>

        <TextView
                android:id="@+id/edit_Situacao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/CustomEditText"
                android:textSize="30sp"
                android:fontFamily="cursive"/>


        <View android:layout_width="200dp"
              android:layout_height="30dp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">
            <ImageView android:id="@+id/app_add"
                       android:layout_width="0dp"
                       android:layout_height="40dp"
                       android:layout_weight="1"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/ic_add"
                       android:tint="@color/colorPrimary"/>

            <ImageView android:id="@+id/app_neg"
                       android:layout_width="0dp"
                       android:layout_height="40dp"
                       android:layout_weight="1"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/ic_neg"
                       android:tint="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="horizontal">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Adicionar Receita"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:layout_weight="1"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Adicionar Despesa"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
        </LinearLayout>

        <Button android:id="@+id/app_listar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Veja seu histórico"
                style="@style/CustomButton"/>

        <Button android:id="@+id/app_grafico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Estatísticas"
                style="@style/CustomButton"/>

        <Button android:id="@+id/app_grafico"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cotação do dia"
                style="@style/CustomButton"/>


        <View android:layout_width="200dp"
              android:layout_height="30dp"/>

        <LinearLayout
                android:id="@+id/graficototal_id"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:orientation="vertical"
                android:layout_gravity="center">
        </LinearLayout>

    </LinearLayout>

</ScrollView>