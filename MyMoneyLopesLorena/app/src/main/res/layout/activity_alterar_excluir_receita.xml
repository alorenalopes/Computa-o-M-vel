<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AlterarExcluirReceitaActivity">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Receita"
                android:fontFamily="cursive"
                android:textSize="25dp"
                style="@style/CustomText"/>


        <View android:layout_width="200dp"
              android:layout_height="1dp"
              android:layout_gravity="center"
              android:background="@color/colorText"/>

        <View android:layout_width="200dp"
              android:layout_height="30dp"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent">

            <TextView
                    android:id="@+id/edit_Dia"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="DD"
                    style="@style/CustomEditText" android:inputType="number"/>

            <TextView
                    android:id="@+id/edit_Mes"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="MM"
                    style="@style/CustomEditText" android:inputType="number"/>
            /
            <TextView
                    android:id="@+id/edit_Ano"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="YYYY"
                    style="@style/CustomEditText" android:inputType="number"/>


        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Data"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="10sp"/>


        <EditText
                android:id="@+id/edit_Valor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="R$"
                style="@style/CustomEditText" android:inputType="number|numberDecimal"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Valor"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="10sp"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <View android:layout_width="200dp"
                  android:layout_height="30dp"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:text="Selecione a categoria:"
                      android:textSize="12sp"
                      android:textAllCaps="true"/>


            <View android:layout_width="200dp"
                  android:layout_height="30dp"/>

            <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                <RadioButton
                        android:text="Salario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_Salario"
                        android:layout_weight="1"
                        style="@style/RadioGroup"/>
                <RadioButton
                        android:text="Prêmios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_Premio"
                        android:layout_weight="1"
                        style="@style/RadioGroup"/>
                <RadioButton
                        android:text="Presente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_Presente"
                        android:layout_weight="1"
                        style="@style/RadioGroup"/>
                <RadioButton
                        android:text="Outros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_outros"
                        android:layout_weight="1"
                        style="@style/RadioGroup"/>
            </RadioGroup>

        </LinearLayout>

        <EditText
                android:id="@+id/edit_extra"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                style="@style/CustomEditText"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Descrição"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="10sp"/>

        <View android:layout_width="200dp"
              android:layout_height="30dp"/>

        <Button
                android:text="Alterar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_Alterar"
                style="@style/CustomButton"/>

        <Button
                android:text="Deletar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_Deletar"
                style="@style/CustomButton"/>

    </LinearLayout>

</ScrollView>